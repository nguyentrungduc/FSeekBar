<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/arow"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:background="#41d72a"
        app:layout_constraintBottom_toTopOf="@id/text_estimate"
        app:layout_constraintEnd_toEndOf="@id/text_estimate"
        app:layout_constraintStart_toStartOf="@id/text_estimate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_estimate"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_seekabar"
        android:gravity="center"
        android:text="60dp"
        android:textColor="#FFF"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>